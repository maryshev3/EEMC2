<UserControl x:Class="EEMC2.Views.CoursesListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EEMC2.Views"
             mc:Ignorable="d"
            xmlns:viewmodels="clr-namespace:EEMC2.ViewModels"
            d:DataContext="{d:DesignInstance Type=viewmodels:CoursesListItemVM}">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button
                Name="CourseButton"
                Template="{DynamicResource ResourceKey=RoundedButton}"
                Command="{Binding Path=OpenCourse}"
                CommandParameter="{Binding}"
                Background="White"
                Height="140"
                Width="220"
                Margin="10"
                Padding="0"
                HorizontalContentAlignment="Center"
                BorderThickness="1"
                BorderBrush="#a4b3ca">
                <Grid Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                    </Grid.ColumnDefinitions>
                    <Border BorderThickness="0" Grid.Row="0" CornerRadius="10,10,0,0">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding Path=CourseFull.CourseImage.ImagePath}" Stretch="Fill"/>
                        </Border.Background>
                    </Border>
                    <TextBlock Grid.Row="1" Margin="0,0,0,0" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Path=Name}" FontSize="16"/>
                </Grid>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
